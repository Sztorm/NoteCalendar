<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DayFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDayOfMonth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.44"
        android:textColor="?attr/colorText"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="300dp"
        tools:text="8" />

    <TextView
        android:id="@+id/lblMonth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:textColor="?attr/colorText"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        tools:text="October" />

    <TextView
        android:id="@+id/lblDayOfWeek"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:textColor="?attr/colorText"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        tools:text="Monday" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/dayNoteFragmentContainer" >

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AddNote"
            app:icon="@drawable/icon_note_add"
            app:iconGravity="textStart"
            android:id="@+id/btnNoteAdd"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

    </FrameLayout>

</LinearLayout>