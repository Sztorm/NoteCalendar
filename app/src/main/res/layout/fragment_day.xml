<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DayFragment">

    <TextView
        android:id="@+id/lblDayOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="110dp"
        android:textColor="?attr/colorText"
        tools:text="8"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/lblMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textColor="?attr/colorText"
        android:maxLines="1"
        tools:text="October"
        tools:ignore="SpUsage"/>

    <TextView
        android:id="@+id/lblDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="?attr/colorText"
        android:maxLines="1"
        tools:text="Monday"
        tools:ignore="SpUsage"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddNote"
        app:icon="@drawable/icon_note_add"
        app:iconGravity="textStart"
        android:id="@+id/btnNoteAdd"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/dayNoteFragmentContainer"/>

</LinearLayout>