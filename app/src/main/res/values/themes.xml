<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorText">@color/black_cool</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorNote">@color/note_light_primary</item>
        <item name="colorNoteVariant">@color/note_light_secondary</item>
        <item name="colorInactiveItem">@color/item_inactive_dark</item>
        <item name="colorInactiveItemVariant">@color/item_inactive_light</item>
        <item name="colorButtonText">@color/white_cool</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>